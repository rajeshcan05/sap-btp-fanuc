<mvc:View controllerName="purchaseorder.poorder.controller.List"
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar"> <Page id="listPage" title="">
        <content>
            <fb:FilterBar id="filterBar" search=".onSearch" useToolbar="false" showGoOnFB="true">
                <fb:filterGroupItems>
                    <fb:FilterGroupItem groupName="G1" name="A" label="Purchase Order" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchPO" placeholder="Enter PO Number"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem groupName="G1" name="B" label="Supplier" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchSupplier" placeholder="Enter Supplier ID"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem groupName="G1" name="C" label="Plant" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchPlant" placeholder="Enter Plant"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem groupName="G1" name="D" label="Company Code" visibleInFilterBar="true">
                        <fb:control>
                            <Input id="searchCompCode" placeholder="Enter Company Code"/>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>

            <Table id="ordersTable" items="{/zi_p2p_PO_HEAD}" mode="SingleSelectMaster" itemPress=".onListItemPress">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Inbound Gate Pass ({= ${/zi_p2p_PO_HEAD}.length || 0 })" level="H2"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column><Text text="PO Number" /></Column>
                    <Column><Text text="Type" /></Column>
                    <Column><Text text="Company Code" /></Column>
                    <Column><Text text="Plant" /></Column>
                    <Column><Text text="Supplier" /></Column>
                    <Column><Text text="Supplier Name" /></Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <Text text="{PurchaseOrder}" />
                            <Text text="{PurchaseOrderType}" />
                            <Text text="{CompanyCode}" />
                            <Text text="{Plant}" />
                            <Text text="{Supplier}" />
                            <Text text="{SupplierName}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>