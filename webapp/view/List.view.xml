<mvc:View
    controllerName="purchaseorder.poorder.controller.List"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:fb="sap.ui.comp.filterbar">

    <Page id="listPage" title="Inbound Gate Pass">

        <content>

            <!-- ===================== -->
            <!-- Filter Bar -->
            <!-- ===================== -->
            <fb:FilterBar
                id="filterBar"
                search=".onSearch"
                useToolbar="false"
                showGoOnFB="true">

                <fb:filterGroupItems>

                    <fb:FilterGroupItem
                        groupName="G1"
                        name="PO"
                        label="Purchase Order"
                        visibleInFilterBar="true">
                        <fb:control>
                            <Input
                                id="searchPO"
                                placeholder="Enter PO Number"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="G1"
                        name="SUP"
                        label="Supplier"
                        visibleInFilterBar="true">
                        <fb:control>
                            <Input
                                id="searchSupplier"
                                placeholder="Enter Supplier ID"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="G1"
                        name="PLANT"
                        label="Plant"
                        visibleInFilterBar="true">
                        <fb:control>
                            <Input
                                id="searchPlant"
                                placeholder="Enter Plant"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                    <fb:FilterGroupItem
                        groupName="G1"
                        name="COMP"
                        label="Company Code"
                        visibleInFilterBar="true">
                        <fb:control>
                            <Input
                                id="searchCompCode"
                                placeholder="Enter Company Code"/>
                        </fb:control>
                    </fb:FilterGroupItem>

                </fb:filterGroupItems>
            </fb:FilterBar>

            <!-- ===================== -->
            <!-- Orders Table (Pagination Enabled) -->
            <!-- ===================== -->
            <Table
                id="ordersTable"
                items="{
                    path: '/zi_p2p_PO_HEAD'
                }"
                mode="SingleSelectMaster"
                itemPress=".onListItemPress"
                growing="true"
                growingScrollToLoad="true"
                growingThreshold="100">

                <!-- Header -->
                <headerToolbar>
                    <Toolbar>
                        <Title
                            text="Inbound Gate Pass"
                            level="H2"/>
                        <ToolbarSpacer />
                        <Text text="Scroll to load more" />
                    </Toolbar>
                </headerToolbar>

                <!-- Columns -->
                <columns>
                    <Column><Text text="PO Number" /></Column>
                    <Column><Text text="Type" /></Column>
                    <Column><Text text="Company Code" /></Column>
                    <Column><Text text="Plant" /></Column>
                    <Column><Text text="Supplier" /></Column>
                    <Column><Text text="Supplier Name" /></Column>
                    <Column><Text text="PO Date" /></Column>
                </columns>

                <!-- Rows -->
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onListItemPress">

                        <cells>
                            <Text text="{PurchaseOrder}" />
                            <Text text="{PurchaseOrderType}" />
                            <Text text="{CompanyCode}" />
                            <Text text="{Plant}" />
                            <Text text="{Supplier}" />
                            <Text text="{SupplierName}" />

                            <Text text="{
                                path: 'purchaseorderdate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: { style: 'medium' }
                            }" />
                        </cells>

                    </ColumnListItem>
                </items>

            </Table>

        </content>
    </Page>
</mvc:View>
